<div class="home-faq-sec-outer">
   <div class="page-width">
      <div class="home-faq-sec-wrap">
         <div class="home-faq-sec-heading">
            <h2>{{ section.settings.title }}</h2>
         </div>
         <div class="home-faq-sec-innr">
            {% for block in section.blocks %}
            <div class="home-faq-sec-block {% if forloop.first %}active{% endif %}">
                <div class="home-faq-heading">
                 <h3 class="f-24 f-600 clr_navy">{{ block.settings.heading }}</h3>
              </div>
                <div class="home-faq-desc">
                 <p class="clr_navy f-20 f-400">{{ block.settings.desc }}</p>
              </div>
            </div>
            {% endfor %}
         </div>
      </div>
   </div>
</div>

{% schema %}
  {
    "name": "faq-section",
    "settings": [
      {
        "type": "text",
        "id" : "title",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "type": "faq-sec",
        "name" : "faq-sec",
        "settings": [
            {
            "type": "text",
            "id": "heading",
            "label": "heading"
          },
             {
            "type": "textarea",
            "id": "desc",
            "label": "desc"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "faq-section"
      }
    ]
  }
{% endschema %}