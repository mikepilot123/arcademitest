{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  @media screen and (max-width: 576px) {
     .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.mob-padding_top }}px !important;
      padding-bottom: {{ section.settings.mob-padding_bottom }}px !important;
    }
  }
{% endstyle %}
<script>
document.addEventListener("DOMContentLoaded", function() {
  function starRating() {
    const reviews = document.querySelectorAll(".review");
    reviews.forEach((review, reviewIndex) => {
        const starRating = review.querySelector(".star-rating");
        const rating = parseFloat(starRating.getAttribute("data-rating"));
        const stars = starRating.querySelectorAll(".star");
  
        stars.forEach((star, starIndex) => {
            const starNumber = starIndex + 1;
            if (starNumber <= rating) {
                star.classList.add("full");
            } else if (starNumber - rating < 1) {
                const partialFillPercentage = ((rating % 1) * 100).toFixed(2);
  
                const svgNamespace = "http://www.w3.org/2000/svg";
                const gradientId = `partial-gradient-${reviewIndex}-${starIndex}`;
  
                const defs = document.createElementNS(svgNamespace, "defs");
                const linearGradient = document.createElementNS(svgNamespace, "linearGradient");
                linearGradient.setAttribute("id", gradientId);
  
                const stop1 = document.createElementNS(svgNamespace, "stop");
                stop1.setAttribute("offset", `${partialFillPercentage}%`);
                stop1.setAttribute("stop-color", "#0d182e");
  
                const stop2 = document.createElementNS(svgNamespace, "stop");
                stop2.setAttribute("offset", `${partialFillPercentage}%`);
                stop2.setAttribute("stop-color", "#fff");
  
                linearGradient.appendChild(stop1);
                linearGradient.appendChild(stop2);
                defs.appendChild(linearGradient);
  
                const svg = document.createElementNS(svgNamespace, "svg");
                svg.setAttribute("class", "star partial");
                svg.setAttribute("width", "24");
                svg.setAttribute("height", "24");
  
                const use = document.createElementNS(svgNamespace, "use");
                use.setAttributeNS("http://www.w3.org/1999/xlink", "xlink:href", "#star");
                
                svg.appendChild(defs);
                svg.appendChild(use);
                svg.querySelector("use").setAttribute("fill", `url(#${gradientId})`);
                star.replaceWith(svg);
            }
        });
    });
  }
  starRating(), 
  document.addEventListener("shopify:section:load", starRating);
});
</script>
<div
  class="custom_testimonial_wrap section-{{ section.id }}-padding"
  style="background-color: {{ section.settings.section_bg_color }};"
>
  <div class="top_gradient"></div>
  <div class="page-width">
    <div class="custom_testimonial_row">
      <div class="custom_testimonial_col">
        {% if section.settings.content != blank %}
          <div class="custom_testimonial_left">
            {{ section.settings.content }}
            <div class="reviews_left d-none">
              <img src="https://cdn.shopify.com/s/files/1/0835/6623/1880/files/Group_3711_48c9f5a9-70df-43c4-b9f2-b5c3d5c5e52f.png">
              <p><img src="https://cdn.shopify.com/s/files/1/0835/6623/1880/files/Group_101.png"></p>
            </div>
          </div>
        {% endif %}
      </div>
      <div class="custom_testimonial_col">
        <div class="custom_testimonial_right">
          <div class="testimonial_slider_box">
            <div class="testimonial_slider">
              {% for block in section.blocks %}
                {% if block.settings.reviewtext != blank %}
                  <div class="testimonial_slide">
                    <div class="testimonial_slide_inner">
                      <svg width="0" height="0" xmlns="http://www.w3.org/2000/svg" class="singlestar">
                        <symbol id="star" viewBox="0 0 24 24">
                            <path d="M12 .587l3.668 7.435 8.214 1.193-5.941 5.787 1.404 8.185L12 18.896l-7.345 3.858 1.404-8.185-5.941-5.787 8.214-1.193z"/>
                        </symbol>
                      </svg>
                      <div class="review">
                        <div class="star-rating" data-rating="{{ block.settings.rating }}">
                          {% for i in (1..5) %}
                            <svg class="star" width="24" height="24">
                              <use xlink:href="#star"></use>
                            </svg>
                          {% endfor %}
                        </div>
                        {% if block.settings.authorname != blank %}
                          <div class="authorname">
                            <p>{{ block.settings.authorname }}</p>
                          </div>
                        {% endif %}
                      </div>
                      {{ block.settings.reviewtext }}
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
            <div class="testimonial-slider-nav"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
  "name": "custom testimonials",
  "settings": [
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Background color"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Richtext"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "mob-padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Mobile Top padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "mob-padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Mobile Bottom padding",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "testimonial-slider",
      "name": "review",
      "settings": [
        {
          "type": "checkbox",
          "id": "showreview",
          "label": "Show star rating",
          "default": true
        },
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 0.5,
          "unit": "s",
          "label": "Rating",
          "default": 1
        },
        {
          "type": "text",
          "id": "authorname",
          "label": "text"
        },
        {
          "type": "richtext",
          "id": "reviewtext",
          "label": "text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "custom testimonials",
      "category": "Custom"
    }
  ]
}
{% endschema %}
